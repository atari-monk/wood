{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build/",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["mocha"]
  },
  "include": ["./src/**/*.ts"]
}
